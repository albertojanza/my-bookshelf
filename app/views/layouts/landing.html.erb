<!DOCTYPE html>
<html>
<head>
  <title>Libroshelf</title>
<%= yield :meta_seo%>


<link rel="shortcut icon" href="/favicon.ico" >
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :open_graph %>

<% if Rails.env.eql?('production') %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-29761982-1']);
  _gaq.push(['_setDomainName', 'libroshelf.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
<% end %>

</head>
<body>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=272512669482455";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

  <div id="fixed-header">
    <div id="header" class="wrapper">
      <div id="logo" class="left_float" style="margin-top:5px">
        <%= link_to image_tag('logo.png'), root_path %>
      </div>
        
      <% unless logged_in? %> 
        <div class="right_float">
            <%= link_to "<div class=\"green-button3-small\"><div class=\"facebook-small-icon\"></div><div class=\"button-text\">#{I18n.t('login_button')}</div></div>".html_safe, (params[:action].eql?('canvas') || params[:canvas]) ? canvas_permission_path : facebook_permission_path, :class => 'link' %>
        </div>
      <% else %>
            <ul class="menu right_float">
              <li><%= link_to I18n.t('my_bookcase_option'), bookcase_path(:id => current_user.id), :class => ((current_user.eql?(@user) && !params[:action].eql?('friends_bookcase') ) ? 'selected' : '')  %></li>
              <li class="separator">|</li>
              <li><%= link_to I18n.t('friends_bookcase_option'), friends_bookcase_path(:id => current_user.id), :class => ((!current_user.eql?(@user) || params[:action].eql?('friends_bookcase'))   ? 'selected' : '') %></li>
              <li class="separator">|</li>
              <li><%= link_to I18n.t('my_account'), account_path, :class => (params[:controller].eql?('users') )  %></li>

            </ul>
      <% end %>

      <div class="book-search-box" style="margin-right:100px;">
        <%= form_tag search_path, :id => 'book_search_box'  do  %>
          <%= text_field_tag 'title',(params[:title] ? params[:title] : I18n.t('input_search_field')),  { :id => 'book-search',:autocomplete =>'off',:onclick => "search_input();"} %>
          <button title="Search" onclick="$('book_search_box').submit();" type="submit"><span class="hidden">Search</span></button>
        <% end %>
      </div>
    </div>
  </div>
<div id="main" >


    <div id="main-landing">
        <%= yield %>
    </div>

    <div class="cleaner">
    </div>
</div>

  <div id="footer" >
        <ul class="menu">
            <li><%= link_to I18n.t("contact"), root_path %></li>
            <li><%= link_to  I18n.t("privacy_policy"), privacy_path %></li>
            <li><%= link_to I18n.t("terms_of_use") , root_path %></li>
        </ul>
  </div>


</body>
</html>
