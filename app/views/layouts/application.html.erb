<!DOCTYPE html>
<html>

 <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# book: http://ogp.me/ns/book#">

  <title>Libroshelf</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :open_graph %>

<% if Rails.env.eql?('production') %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-29761982-1']);
  _gaq.push(['_setDomainName', 'libroshelf.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>

</head>
<body>

  <div class="modal-wrapper" id="modal-recommend">
      <div class="modal-screen">
          <div id="modal-recommend-container" class="hidden modal-content modal-recommend">
          </div>
          <div id="facebook-frame-container" class="hidden modal-content" >
            <iframe id="facebookframe" width="500px" height="400px">
asdfsd
            </iframe>
          </div>
      </div>
  </div>

<div id="fixed-header">
  <div class="wrapper_with_wings">
      <div id="header" class="wrapper">
        <div id="logo" class="left_float" style="margin-top:5px">
            <%= link_to image_tag('logo.png'), root_path %>
        </div>

        
         <% unless logged_in? %> 
        <div class="right_float">
            <%= link_to "<div class=\"green-button3-small\">Join us through <div class=\"facebook-small-icon\"></div></div>".html_safe, facebook_permission_path, :class => 'link' %>
        </div>
          <% else %>
            <ul class="menu right_float">
              <li><%= link_to I18n.t('my_bookcase_option'), bookcase_path(:id => current_user.id), :class => ((current_user.eql?(@user) && !params[:action].eql?('friends_bookcase') ) ? 'selected' : '')  %></li>
              <li class="separator">|</li>
              <li><%= link_to I18n.t('friends_bookcase_option'), friends_bookcase_path(:id => current_user.id), :class => ((!current_user.eql?(@user) || params[:action].eql?('friends_bookcase'))   ? 'selected' : '') %></li>
              <li class="separator">|</li>
              <li><%= link_to I18n.t('my_account'), account_path, :class => (params[:controller].eql?('users') )  %></li>

            </ul>
          <% end %>

        <div class="right_float">
          <%= form_tag search_path  do  %>
            <%= text_field_tag 'title',(params[:title] ? params[:title] : I18n.t('input_search_field')),  {:id => 'book-search', :autocomplete =>'off',:onclick => "search_input();"} %>
          <% end %>


        </div>

    </div>
    </div>
</div>
<div id="main" class="wrapper_with_wings" >
  <div class="wrapper">

  <div id="main-header">
      <%= yield :mainheader %>
  </div>

  <div id="main-sidebar">
    <%= yield :sidebar%>
  </div>
  <div id="main-content">
      <%= yield %>
  </div>
  </div>
  <div class="cleaner">
  </div>
</div>

  <div id="footer" class="wrapper_with_wings">
    <div  class="wrapper">
        <ul class="menu">
            <li><%= link_to I18n.t("contact"), new_contact_path %></li>
            <li><%= link_to  I18n.t("privacy_policy"), privacy_path %></li>
            <li><%= link_to I18n.t("terms_of_use") , root_path %></li>
        </ul>

    </div>

</div>


</body>
</html>
