<div id="friend-<%= friend['id'] %>" class="friend-box">
    <%= image_tag("http://graph.facebook.com/#{friend['id']}/picture",:width => 45  )%>
    <div class="user-name"><%= friend['name'] %></div>
</div>

<script type="text/javascript" >
    $('#friend-<%= friend['id'] %>').click(function() {
        add_friend_recommendation('<%= friend['id'] %>');
    });
</script>    
