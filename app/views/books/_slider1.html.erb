
<div class="book_list"> 
  <div>
    <%= link_to "<h2>#{title(type)}</h2>".html_safe, bookshelf_path(:id => current_user.id), :class => 'link' %>
  <% if items_slide < books.size %>    
    <ul class="menu">
      <li><%= link_to "All", bookcase_path(type), :class => 'link' %></li>
      <li><%= link_to_function "Previous", "previous_slide(#{slider_index})", :class => 'link' %></li>
      <li><%= link_to_function "Next", "next_slide(#{slider_index})", :class => 'link' %></li>
    </ul>
  <% end %>
  </div>
  <div class="bookshelf-slider1 cleaner" style="height:<%= 125 * ((items_slide  + 2) / 3) %>px">
      <% books.each_slice(items_slide).each_with_index do |slice,index| %>
        <div id="<%= slider_index %>-bookshelf-slide-<%= index %>" class="bookshelf-slide1 <%= 'hidden' unless index.eql?(0) %>">
          <% slice.each do |book| %>
            <%= render :partial => 'book_item', :object => book %>
          <% end %>
        </div>
      <% end %>
  </div> 
  <div class="cleaner">
  </div> 
</div> 




