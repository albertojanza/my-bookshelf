
<div class="book_list"> 
  <div>
    <div class="book-list-title">
    <%= link_to "<h2>#{title(type)}</h2>".html_safe, shelf_path(:id => @user, :code => type), :class => 'link' %>
  <% if items_slide < books.size %>    
    <ul class="menu">
      <li><%= link_to "All", shelf_path(:id => @user, :code => type), :class => 'link' %></li>
      <li><%= link_to_function "Previous", "previous_slide(#{slider_index})", :class => 'link disabled',:id=> "previous_#{slider_index}" %></li>
      <li><%= link_to_function "Next", "next_slide(#{slider_index})", :class => 'link',:id=> "next_#{slider_index}"  %></li>
    </ul>
  <% end %>
    </div>
  </div>
  <div class="bookshelf-slider1 " style="clear:left; height:<%= 125 * ((items_slide  + 2) / 3) %>px">
      <% books.each_slice(items_slide).each_with_index do |slice,index| %>
        <div id="<%= slider_index %>-bookshelf-slide-<%= index %>" class="bookshelf-slide1 <%= 'hidden' unless index.eql?(0) %>">
          <%= render :partial => 'book_item', :collection => slice %>
        </div>
      <% end %>
  </div> 
  <div  style="clear:left;">
  </div> 
</div> 




