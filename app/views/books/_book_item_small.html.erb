<div class="book-item book-item-small" >
  <%= link_to image_tag((book_item_small.tiny_image ? amazon_url(book_item_small.tiny_image) : 'book-item-default-image.png') ), book_item_small %>
  <div class="info-container">
    <div class="info">
      <div class="title"><%= link_to "<div>#{truncate(book_item_small.title, :length => 50, :separator => ' ', :omission => '..')}</div>".html_safe, book_item_small %></div>
      <div class="author"><%= truncate("#{I18n.t('by')} #{by_authors(book_item_small.author)}", :length => 20,  :omission => '..') if book_item_small.author %></div>
    </div>
  </div>
</div>
