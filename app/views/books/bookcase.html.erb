<% content_for :mainheader do %>

  <%= render 'submenu_my_bookshelf' %>
<div class="title">
<h1><%= (logged_in? && @user.eql?(current_user)) ? I18n.t('my_bookcase') : I18n.t('his_bookcase', :name => @user.name.capitalize)%></h1>
</div>

<div class="cleaner"></div>

<% end %>

<% content_for :page_title do %>
  Libroshelf
<% end %>
<% content_for :meta_seo do %>
  <meta name="description" content="Your bookcase" />
  <meta name="keywords" content="  book, books, reading " />
    
<% end %>


<%= render 'slider',:title => title(3),:empty_legend => empty_legend(3), :path => shelf_path(:id => @user, :code => 3), :partial => '/books/book_item', :collection => @recommended_books,  :items_slide => 3,:slider_index => 0 %>
<%= render 'slider',:title => title(2), :empty_legend => empty_legend(2),:path => shelf_path(:id => @user, :code => 2), :partial => '/books/book_item', :collection => @next_books,  :items_slide => 3,:slider_index => 1 %>
<%= render 'slider',:title => title(1), :empty_legend => empty_legend(1),:path => shelf_path(:id => @user, :code => 1), :partial => '/books/book_item', :collection => @reading, :items_slide => 3,:slider_index => 2  %>
