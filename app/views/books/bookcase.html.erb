<script type="text/javascript" >
    var sliders = [[0,<%= (@recommended_books.size + 2) / 3 %>],[0,<%= (@next_books.size + 2) / 3 %>],[0,<%= (@reading.size + 2) / 3 %>],[0,<%= (@read_books.size + 5) / 6 %>] ];
</script>    




