<div  id="friend-out-<%= friend_out['id'] %>" class="friend-box">
    <%= image_tag("http://graph.facebook.com/#{friend_out['id']}/picture",:width => 45  )%>
    <div class="user-name"><%= friend_out['name'] %></div>
</div>

<script type="text/javascript" >
    $('#friend-out-<%= friend_out['id'] %>').click(function() {

jQuery("#modal-recommend").show();
jQuery("#facebook-frame-container").show();
document.getElementById('facebookframe').src = 'https://www.facebook.com/dialog/send?app_id=<%= ENV['FACEBOOK_KEY'] %>&display=iframe&to=<%= friend_out['id']%>&name=Libroshelf&link=http://www.libroshelf.com/&redirect_uri=http://www.libroshelf.com/response&access_token<%= current_user.token %>';

    });
</script>    
