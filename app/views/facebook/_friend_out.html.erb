    <%= image_tag("http://graph.facebook.com/#{friend_out['id']}/picture",:width => 45  )%>
    <div class="user-name"><%= friend_out['name'] %></div>
</div>


<script type="text/javascript" >
    $('#friend-out-<%= friend_out['id'] %>').click(function() {
top.location.href="<%= facebook_dialog_path(:uid => friend_out['id']) %>";
    });
</script>    
