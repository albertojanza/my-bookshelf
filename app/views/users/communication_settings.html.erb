<% content_for :mainheader do %>

  <%= render 'submenu_account' %>
  <div class="title">
    <h1><%= I18n.t('account_setting')%></h1>
  </div>
  <div class="cleaner"></div>

<% end %>

<% content_for :page_title do %>
  Libroshelf
<% end %>
<% content_for :meta_seo do %>
  <meta name="description" content="Your bookcase" />
  <meta name="keywords" content="  book, books, reading " />
    
<% end %>


<div class="section-title">
  <h2> <%= I18n.t 'libroshelf_communications' %></h2>
</div>

<div id="libroshelf_communication_form">
  <%= form_tag('/libroshelf_communication_form', :id => 'libroshelf_my_communication_form') do -%>
    <% if @libroshelf_message  %>
      <div class="sucess">
        <%= I18n.t 'message' %>
      </div>
    <% end %>
    <p><%= check_box_tag 'libroshelf_communications', 'yes', @user.libroshelf_communications %> <%= I18n.t 'libroshelf_communication' %></p>

    <div class="actions">
            <%= link_to_function I18n.t('change_button'), "$('#libroshelf_my_communication_form').submit();",:class => "submit_button" %>
    </div>

</div>

<% end -%>

