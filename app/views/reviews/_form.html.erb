<% @review = Review.new unless @review%>
<%= form_for(@review,:remote => true) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field(:book_id, :value => @book.id) %>
  <%= f.hidden_field(:user_id, :value => current_user.id) %>
  <div class="field">
    <%= f.label 'write a review' %><br />
    <%= f.text_area :content, :class => 'review-text-area' %>
  </div>
  <div class="actions">
            <%= link_to_function I18n.t('write_review'), "$('#new_review').submit();",:class => "submit_button" %>
  </div>
<% end %>
